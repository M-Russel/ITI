#ifndef UART_CONFIG_H_
#define UART_CONFIG_H_


//UCSRA

#define RXC_STATUS     DISABLED
#define TXC_STATUS     DISABLED
#define UDRE_STATUS  ENABLED
#define FE_STATUS       DISABLED
#define DOR_STATUS    DISABLED
#define PE_STATUS       DISABLED
#define U2X_STATUS    DISABLED
#define MPCM_STATUS DISABLED


//UCSRB

#define RXCIE_STATUS DISABLED
#define TXCIE_STATUS DISABLED
#define UDRIE_STATUS DISABLED
#define RXEN_STATUS DISABLED
#define TXEN_STATUS DISABLED
#define UCSZ2_STATUS DISABLED
#define RXB8_STATUS DISABLED
#define TXB_STATUS DISABLED

//UCSRC
#define URSEL_STATUS ENABLED
#define UMSEL_STATUS DISABLED
#define UPM1_STATUS DISABLED
#define UPM0_STATUS DISABLED
#define USBS_STATUS DISABLED
#define UCSZ1_STATUS ENABLED
#define UCSZ0_STATUS ENABLED
#define UCPOL_STATUS DISABLED



#define UART_BAUD_RATE (0x25)


#endif /* UART_CONFIG_H_ */
